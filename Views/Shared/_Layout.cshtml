@using ProyectoProgramadoLenguajes2024.Utilities

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - MediCaja</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/ProyectoProgramadoLenguajes2024.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="//cdn.datatables.net/2.0.7/css/dataTables.dataTables.min.css" asp-append-version="true" />

    <!-- Estilo para el fondo -->
    <style>
        body {
            background-image: url('@Url.Content("~/images/fondo.jpeg")'); /* Ruta relativa a la carpeta wwwroot */
            background-size: cover; /* Cubre todo el fondo */
            background-position: center; /* Centra la imagen */
            background-repeat: no-repeat; /* Evita la repetición */
        }
    </style>

</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg bg-primary" data-bs-theme="ligth">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">MediCaja</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">

                        @if (User.IsInRole(Roles.Admin))
                        {
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="Admin" asp-controller="Especialidad" asp-action="Index">Especialidades</a>
                            </li>
                            
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="Admin" asp-controller="ListaUsuarios" asp-action="Index">Usuarios</a>
                            </li>
                        }

                        @if (User.IsInRole(Roles.Medico))
                        {
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="Medicina" asp-controller="Paciente" asp-action="Index">Pacientes</a>
                            </li>

                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="Medicina" asp-controller="Padecimiento" asp-action="Index">Padecimiento</a>
                            </li>

                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="Medicina" asp-controller="Tratamiento" asp-action="Index">Tratamiento</a>
                            </li>

                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="Medicina" asp-controller="Medicamento" asp-action="Index">Medicamento</a>
                            </li>
                        }
                    </ul>
                    <partial name="_LoginPartial" />
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">

            Proyecto programado en curso App.Lenguajes 2024 - Melissa, Luis, Asdrubal
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    <script src="//cdn.datatables.net/2.0.7/js/dataTables.min.js" asp-append-version="true"></script>

    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <partial name="_ValidationScriptsPartial" />

    @await RenderSectionAsync("Scripts", required: false)



</body>
</html>
