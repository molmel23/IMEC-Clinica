@using ProyectoProgramadoLenguajes2024.Models.ViewModels

@{
    ViewData["Title"] = "Expediente";
    var pacienteId = ViewData["PacienteId"];
}

@model ExpedienteVM
<partial name="_Notifications" />

<div class="container">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">
                Expediente de @Model.PacienteVM.Paciente.NombreCompleto
            </h2>
        </div>
    </div>

    <div class="row pt-4">
        <div class="col-12 text-end">
            <a asp-area="Medicina" asp-controller="Paciente" asp-action="Padecimientos" asp-route-id="@Model.PacienteVM.Paciente.Cedula" class="btn btn-primary mx-2">
                <i class="bi bi-plus-circle"></i> Padecimientos
            </a>
            <a asp-area="Medicina" asp-controller="Paciente" asp-action="Tratamientos" asp-route-id="@Model.PacienteVM.Paciente.Cedula" class="btn btn-primary mx-2">
                <i class="bi bi-plus-circle"></i> Tratamientos
            </a>
            <a asp-area="Medicina" asp-controller="Paciente" asp-action="Medicamentos" asp-route-id="@Model.PacienteVM.Paciente.Cedula" class="btn btn-primary mx-2">
                <i class="bi bi-plus-circle"></i> Medicamentos
            </a>
            <a asp-area="Medicina" asp-controller="Paciente" asp-action="ExamenesMedicos" asp-route-id="@Model.PacienteVM.Paciente.Cedula" class="btn btn-primary mx-2">
                <i class="bi bi-plus-circle"></i> Exámenes Médicos
            </a>
            <a asp-area="Medicina" asp-controller="Paciente" asp-action="AgregarNotasMedicas" asp-route-id="@Model.PacienteVM.Paciente.Cedula" class="btn btn-primary mx-2">
                <i class="bi bi-plus-circle"></i> Agregar Nota Medica
            </a>
        </div>   
    </div>

    <input type="hidden" id="pacienteId" value="@pacienteId" />

    <table id="tblData" class="table table-bordered table-striped" style="width:100%">
        <thead>
            <tr>
                <th>Nota</th>
                <th>Fecha</th>
                <th>Médico</th>
            </tr>
        </thead>

    </table>
</div>

<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/js/notaMedica.js"></script>