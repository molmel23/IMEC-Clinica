
@{
    ViewData["Title"] = "Lista de Usuarios";
}
<partial name="_Notifications" />

<div class="container">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">
                Lista de usuarios
            </h2>
        </div>
        <div class="row pt-4">
            <div class="col-12 text-end">
                <a asp-area="Identity" asp-controller="Account" asp-action="Register" class="btn btn-primary mx-2">
                    <i class="bi bi-plus-circle"></i> Agregar Usuario
                </a>
                <a asp-area="Admin" asp-controller="Paciente" asp-action="Index" class="btn btn-primary mx-2">
                    <i class="bi bi-plus-circle"></i> Pacientes
                </a>
                <a asp-area="Admin" asp-controller="MedicoTratante" asp-action="Index" class="btn btn-primary mx-2">
                    <i class="bi bi-plus-circle"></i> Médicos
                </a>
                <a asp-area="Admin" asp-controller="Administrador" asp-action="Index" class="btn btn-primary mx-2">
                    <i class="bi bi-plus-circle"></i> Administradores
                </a>
            </div>
        </div>
    </div>
</div>

<script src="~/lib/jquery/dist/jquery.min.js"></script>
